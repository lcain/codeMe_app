<p id="notice"><%= notice %></p>

<h1>Listing Hypertexts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hypertexts.each do |hypertext| %>
      <tr>
        <td><%= hypertext.user_id %></td>
        <td><%= hypertext.content %></td>
        <td><%= link_to 'Show', hypertext %></td>
        <td><%= link_to 'Edit', edit_hypertext_path(hypertext) %></td>
        <td><%= link_to 'Destroy', hypertext, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hypertext', new_hypertext_path %>
